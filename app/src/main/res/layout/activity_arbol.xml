<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".ArbolActivity">

    <!-- Voice Info Screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/voiceContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivIntro"
            android:layout_width="359dp"
            android:layout_height="447dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gernikako_arbola"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/seekBarAudio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivIntro" />

        <LinearLayout
            android:id="@+id/mediaControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBarAudio">

            <ImageButton
                android:id="@+id/btnPlay"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_boton_primario"
                android:contentDescription="Play"
                android:src="@drawable/ic_play"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_boton_primario"
                android:contentDescription="Pause"
                android:src="@drawable/ic_pause"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnStop"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_boton_primario"
                android:contentDescription="Stop"
                android:src="@drawable/ic_stop"
                app:tint="@color/white" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Quiz Screen -->
    <ScrollView
        android:id="@+id/quizContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnStartPuzzle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ULERMEN GALDERAK"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp"/>

            <!-- Question 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Zertarako elkartzen ziren Arbolaren azpian?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <Button
                android:id="@+id/q1a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Legeak adosteko eta foruak zin egiteko"
                android:layout_marginBottom="4dp"/>
            <Button
                android:id="@+id/q1a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bazkaltzeko"
                android:layout_marginBottom="16dp"/>

            <!-- Question 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Zer adierazten du Batzar Etxeak?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <Button
                android:id="@+id/q2a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Euskal Herriko demokrazia eta askatasuna"
                android:layout_marginBottom="4dp"/>
            <Button
                android:id="@+id/q2a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Museo soil bat"
                android:layout_marginBottom="16dp"/>

            <!-- Question 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Zertarako erabiltzen da Batzar Etxea?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <Button
                android:id="@+id/q3a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batzar Nagusiak egiteko"
                android:layout_marginBottom="4dp"/>
            <Button
                android:id="@+id/q3a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kontzertuak emateko"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvCongrats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ondo egin duzu! Orain zure arbola sortzera goaz."
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/correct"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnStartPuzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/btnPrincipal"
        android:text="HASI PUZZLEA"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
